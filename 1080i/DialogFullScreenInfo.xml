			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>363</height>
				<texture>osd/fullscreen/osd-back-info.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="group">
				<posx>1600</posx>
				<posy>81</posy>
				<visible>VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)</visible>
				<control type="image">
					<width>86</width>
					<height>62</height>
					<aspect>keepaspect</aspect>
					<texture>flags/defs/hd.png</texture>
					<visible>!IsEmpty(VideoPlayer.VideoResolution) + IntegerGreaterThan(VideoPlayer.VideoResolution,719)</visible>
				</control>
				<control type="image">
					<width>86</width>
					<height>62</height>
					<aspect>keepaspect</aspect>

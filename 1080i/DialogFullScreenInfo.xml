					<font>Font-Condensed-S50-B</font>
					<align>left</align>
					<aligny>center</aligny>
					<scroll>false</scroll>
				</control>
				<control type="label">
					<posx>290</posx>
					<posy>140</posy>
					<width>1200</width>
					<height>44</height>

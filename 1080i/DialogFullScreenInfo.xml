					<textcolor>bbwhite</textcolor>
					<font>Font-Condensed-S36-B</font>
					<align>right</align>
					<aligny>center</aligny>
					<scroll>false</scroll>
				</control>
				<control type="label">
					<posx>192</posx>
					<posy>59</posy>

					<font>Font-Condensed-S36</font>
					<align>left</align>
					<aligny>center</aligny>
					<scroll>false</scroll>
				</control>
				<control type="textbox">
					<posx>290</posx>
					<posy>190</posy>
					<width>1502</width>
					<height>90</height>

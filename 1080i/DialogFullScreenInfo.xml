					<posx>110</posx>
					<posy>61</posy>
					<width>174</width>
					<height>241</height>
					<texture>osd/fullscreen/cover-shadow.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<posx>130</posx>
					<posy>81</posy>
					<width>134</width>
					<height>201</height>
					<texture>$INFO[VideoPlayer.Cover]</texture>

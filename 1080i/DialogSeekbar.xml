<window id="115">
	<defaultcontrol>23</defaultcontrol>
	<visible>Window.IsActive(fullscreenvideo) + [Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Window.IsActive(videoosd)]</visible>
	<controls>
		<control type="group">
			<include>NowPlayingFullscreen</include>
			<visible>!Window.IsActive(sliderdialog)</visible>
			<control type="group">
				<animation effect="slide" end="-100" time="300" tween="sine" easing="inout" condition="Player.Muted | substring(Player.Volume,-60.0)">Conditional</animation>
				<animation effect="slide" end="-213" time="300" tween="sine" easing="inout" condition="Window.IsActive(volumebar)">Conditional</animation>
				<animation effect="slide" start="0,0" end="0,886" time="400" tween="sine" easing="inout" condition="Skin.HasSetting(VideoOSD.OnTop)">Conditional</animation>
				<include>OSDHideShowAnimation</include>
				<visible>!Player.ShowCodec</visible>
				<control type="image">
					<posx>1385</posx>
					<posy>0</posy>
					<width>535</width>
					<height>194</height>
					<texture>osd/fullscreen/osd-back-weatherclock.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<description>Small weather</description>
					<posx>1555</posx>
					<posy>47</posy>
					<width>100</width>
					<height>100</height>
					<texture fallback="weather/small/na.png">weather/small/$INFO[Weather.FanartCode].png</texture>
				</control>
				<control type="label">
					<description>Temp label</description>
					<posx>1567</posx>
					<posy>76</posy>
					<width>75</width>
					<height>34</height>
					<label>$INFO[Weather.Temperature]</label>
					<font>Font-Condensed-S34</font>
					<textcolor>aawhite</textcolor>
					<align>right</align>
					<scroll>false</scroll>
					<visible>Weather.IsFetched</visible>
				</control>
				<control type="group">
					<visible>!Player.Forwarding + !Player.Rewinding</visible>
					<include>visiblehidefadeinfo</include>
					<control type="image">
						<description>Cock image</description>
						<posx>1730</posx>
						<posy>47</posy>
						<width>100</width>
						<height>100</height>
						<texture>osd/fullscreen/clock.png</texture>
						<visible>!Control.IsVisible(24)</visible>
					</control>
					<control type="image" id="24">
						<description>Cock image</description>
						<posx>1730</posx>
						<posy>47</posy>
						<width>100</width>
						<height>100</height>
						<texture>osd/fullscreen/clock-pm.png</texture>
						<visible>substring(System.Time,Pm)</visible>
					</control>
					<control type="label">
						<description>Clock label</description>
						<posx>1742</posx>
						<posy>76</posy>
						<width>150</width>
						<height>34</height>
						<label>$INFO[System.Time(hh)]:$INFO[System.Time(mm)]</label>
						<font>Font-Condensed-S34</font>
						<textcolor>aawhite</textcolor>
						<align>right</align>
						<scroll>false</scroll>
					</control>
				</control>
				<control type="group">
					<visible>Player.Forwarding | Player.Rewinding</visible>
					<include>visiblehidefadeinfo</include>
					<control type="image">
						<description>Forwarding image</description>
						<posx>1730</posx>
						<posy>47</posy>
						<width>100</width>
						<height>100</height>
						<texture>osd/fullscreen/fw.png</texture>
						<visible>Player.Forwarding</visible>
					</control>
					<control type="image">
						<description>Rewinding image</description>
						<posx>1730</posx>
						<posy>47</posy>
						<width>100</width>
						<height>100</height>
						<texture>osd/fullscreen/rw.png</texture>
						<visible>Player.Rewinding</visible>
					</control>
					<control type="label">
						<description>Forwarding / Rewinding 2x</description>
						<include>OSDFwRwLabel</include>
						<label>2x</label>
						<visible>Player.Forwarding2x | Player.Rewinding2x</visible>
					</control>
					<control type="label">
						<description>Forwarding / Rewinding 4x</description>
						<include>OSDFwRwLabel</include>
						<label>4x</label>
						<visible>Player.Forwarding4x | Player.Rewinding4x</visible>
					</control>
					<control type="label">
						<description>Forwarding / Rewinding 8x</description>
						<include>OSDFwRwLabel</include>
						<label>8x</label>
						<visible>Player.Forwarding8x | Player.Rewinding8x</visible>
					</control>
					<control type="label">
						<description>Forwarding / Rewinding 16x</description>
						<include>OSDFwRwLabel</include>
						<label>16x</label>
						<visible>Player.Forwarding16x | Player.Rewinding16x</visible>
					</control>
					<control type="label">
						<description>Forwarding / Rewinding 32x</description>
						<include>OSDFwRwLabel</include>
						<label>32x</label>
						<visible>Player.Forwarding32x | Player.Rewinding32x</visible>
					</control>
				</control>
			</control>
			<control type="group">
				<animation effect="slide" start="0,0" end="0,-890" time="400" tween="sine" easing="inout" condition="Skin.HasSetting(VideoOSD.OnTop)">Conditional</animation>
				<control type="image">
					<posx>0</posx>
					<posy>890</posy>
					<width>1920</width>
					<height>190</height>
					<texture>osd/fullscreen/osd-back.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="group">
					<posx>259</posx>
					<posy>948</posy>
					<control type="progress" id="23">
						<posx>0</posx>
						<posy>0</posy>
						<width>1402</width>
						<height>76</height>
						<info>Player.CacheLevel</info>
						<texturebg>osd/fullscreen/progress-back.png</texturebg>
						<midtexture border="1">osd/fullscreen/center-progress.png</midtexture>
						<lefttexture>-</lefttexture>
						<righttexture>-</righttexture>
						<overlaytexture>-</overlaytexture>
						<animation effect="fade" end="40" time="0" condition="true">Conditional</animation>
					</control>
					<control type="progress" id="23">
						<posx>0</posx>
						<posy>0</posy>
						<width>1402</width>
						<height>76</height>
						<info>Player.Progress</info>
						<texturebg>osd/fullscreen/progress-back.png</texturebg>
						<midtexture border="1">osd/fullscreen/center-progress.png</midtexture>
						<lefttexture>-</lefttexture>
						<righttexture>-</righttexture>
						<overlaytexture>-</overlaytexture>
						<animation effect="fade" end="80" time="0" condition="true">Conditional</animation>
					</control>
				</control>
				<control type="label">
					<posx>102</posx>
					<posy>948</posy>
					<width>158</width>
					<height>68</height>
					<label>$INFO[Player.Time]</label>
					<textcolor>aawhite</textcolor>
					<font>Font-Condensed-S34</font>
					<align>center</align>
				</control>
				<control type="label">
					<posx>1660</posx>
					<posy>948</posy>
					<width>158</width>
					<height>68</height>
					<label>-$INFO[Player.TimeRemaining]</label>
					<textcolor>aawhite</textcolor>
					<font>Font-Condensed-S34</font>
					<align>center</align>
				</control>
				<control type="label">
					<description>Pause</description>
					<posx>750</posx>
					<posy>948</posy>
					<width>420</width>
					<height>68</height>
					<label>$LOCALIZE[112]</label>
					<textcolor>aawhite</textcolor>
					<font>Font-Condensed-S38</font>
					<align>center</align>
					<visible>Player.Paused + ![Window.IsActive(videoosd) | Player.Seeking | Player.DisplayAfterSeek | Player.Forwarding | Player.Rewinding]</visible>
					<animation effect="fade" start="0" end="100" time="400" tween="sine" easing="inout">Visible</animation>
					<animation effect="fade" start="100" end="0" time="400" tween="sine" easing="inout">Hidden</animation>
				</control>
				<control type="group">
					<visible>!Window.IsActive(videoosd) + [Player.Seeking | Player.DisplayAfterSeek | Player.Forwarding | Player.Rewinding]</visible>
					<animation effect="fade" start="0" end="100" time="400" tween="sine" easing="inout">Visible</animation>
					<animation effect="fade" start="100" end="0" time="0" >Hidden</animation>
					<control type="label">
						<posx>750</posx>
						<posy>948</posy>
						<width>420</width>
						<height>68y</height>
						<label>$LOCALIZE[773] $INFO[Player.SeekOffset]</label>
						<textcolor>aawhite</textcolor>
						<font>Font-Condensed-S34</font>
						<align>center</align>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>
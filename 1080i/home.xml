<window id="0">
	<defaultcontrol always="true">20</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>	
		<!-- Backgrounds -->
		<include>CommonContent</include>
		<!-- Custom home backdrops -->
		<include>HomeCustomBackdrops</include>
		<!-- Bottom -->
		<include>CommonStage</include>	
		<!-- Submenu -->
		<include condition="!Skin.HasSetting(HideSubMenuMovies)">HomeSubMenuMovies</include>
		<include condition="!Skin.HasSetting(HideSubMenuTVShows)">HomeSubMenuTVShows</include>
		<include condition="!Skin.HasSetting(HideSubMenuMusic)">HomeSubMenuMusic</include>
		<include condition="!Skin.HasSetting(HideSubMenuSettings)">HomeSubMenuSettings</include>
		<!-- Home slider controls -->
		<include>HomeWraplist</include>
		<!-- Home open/close animation -->
		<include>HomeWraplistAnimation</include>
		<!-- Recent played information -->
		<include>Recent-Added</include>
		<!-- fade background -->
		<include>FadeBackground</include>	
		<!-- bottom Buttons -->
		<include condition="!Skin.HasSetting(HideHomeButtons)">shutdown-favs</include>
		<!-- Common (now playing) info -->
		<include>Common-Home-Info</include>
	</controls>
</window>